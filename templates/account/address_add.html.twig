{% extends 'base.html.twig' %}

{% block title %}Ajouter une adresse
{% endblock %}

{% block content %}
	<h1>
		Ajouter une adresse
	</h1>
	Gestion adresses
	<a href="{{ path('app_account')}}">Retour</a>
	<hr>
	{% if app.user.addresses|length == 0 %}
		<p class='text-center'>
			Vous n'avez pas encore ajouté d'adresse dans votre compte client. Pour ajouer une, veuillez
			<a href="">cliquer içi</a>
		</p>
	{% else %}
		Afficher les adresses
	{% endif %}

{% endblock %}
