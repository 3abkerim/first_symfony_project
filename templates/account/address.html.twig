{% extends 'base.html.twig' %}

{% block title %}Mes adresses - La boutique Française
{% endblock %}

{% block content %}
	<a class='btn btn-info btn-sm float-right' href="{{ path('account_address_add') }}">Ajouter une adresse</a>
	<h1>
		Mes adresses
	</h1>
	Gestion adresses
	<a href="{{ path('app_account')}}">Retour</a>
	<hr>
	{% if app.user.addresses|length == 0 %}
		<p class='text-center'>
			Vous n'avez pas encore ajouté d'adresse dans votre compte client. Pour ajouer une, veuillez
			<a href="">cliquer içi</a>
		</p>
	{% else %}
		Afficher les adresses
	{% endif %}

{% endblock %}
